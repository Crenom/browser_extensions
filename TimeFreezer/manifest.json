{
    "manifest_version": 2,

    "name": "Time Freezer",
    "version": "1.0",

    "icons": {
        "16": "16x16.png",
        "32": "32x32.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },

	"permissions": [
		 "activeTab"
	],

    "browser_action": {
        "default_title": "Time Freezer",
        "default_icon": "48x48.png",
        "default_popup": "popup.html"
    }
 }